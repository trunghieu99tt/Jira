{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "extends": "my-tsconfig/base.json",
  "exclude": ["node_modules", "dist", "data", "uploads"],
  "include": ["src/**/*.ts", "src/**/**/*.ts", "test", "src", "global.d.ts"]
}
